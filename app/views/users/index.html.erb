<div class='col-md-8 col-md-offset-1'>
  <div class='row'>
    <h1>用户列表</h1>
  </div>
  <div class='row'>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>用户名</th>
          <th>设备</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user_path(user) %></td>
            <td></td>
            <td>
              <%= link_to '详细', user %>
              <%= link_to '编辑', edit_user_path(user) %>
              <%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br />
  <div class='row'>
    <%= button_to '新建用户', new_user_path, method: :get, class: 'btn btn-primary' %>
  </div>
</div>
